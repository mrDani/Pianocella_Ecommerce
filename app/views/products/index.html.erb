<%= search_form_for @q, url: products_path do |f| %>
    <%= f.label :name_cont, "Search Products" %>
    <%= f.search_field :name_cont %>
    <%= f.submit "Search" %>
  <% end %>
  
  <% @products.each do |product| %>
    <%= link_to product.name, product_path(product) %><br>
  <% end %>
  
  <%= paginate @products %>
  
