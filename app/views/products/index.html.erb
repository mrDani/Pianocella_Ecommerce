<h1 class="mb-4 text-center fw-bold">All Products</h1>

<div class="text-center mb-4">
  <%= link_to "ðŸ†• New This Week", products_path(q: { created_at_gteq: 1.week.ago }), class: "btn btn-outline-primary me-2" %>
  <%= link_to "ðŸ“… Recently Updated", products_path(q: { updated_at_gteq: 1.week.ago }), class: "btn btn-outline-success" %>
